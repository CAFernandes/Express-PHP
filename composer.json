{
    "name": "express-php/microframework",
    "description": "Express PHP - A lightweight, fast, and secure microframework inspired by Express.js for building modern PHP web applications and APIs",
    "type": "library",
    "keywords": [
        "php",
        "microframework",
        "api",
        "web",
        "express",
        "middleware",
        "router",
        "security",
        "csrf",
        "xss",
        "cors",
        "openapi",
        "swagger"
    ],
    "homepage": "https://github.com/express-php/microframework",
    "license": "MIT",
    "authors": [
        {
            "name": "Express PHP Contributors",
            "homepage": "https://github.com/express-php/microframework/contributors"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "ext-json": "*",
        "ext-session": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "suggest": {
        "ext-openssl": "Required for secure token generation",
        "ext-mbstring": "Required for proper string handling",
        "ext-fileinfo": "Required for file upload validation",
        "ext-apcu": "For caching middleware and performance optimization"
    },
    "autoload": {
        "psr-4": {
            "Express\\": "SRC/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Express\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:security": "php test/security_test.php",
        "phpstan": "phpstan analyse",
        "cs:check": "phpcs --standard=PSR12 SRC/",
        "cs:fix": "phpcbf --standard=PSR12 SRC/",
        "examples:security": "php examples/example_security.php",
        "examples:complete": "php examples/example_complete.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "archive": {
        "exclude": [
            "/test",
            "/tests",
            "/examples",
            "/.github",
            "/.gitignore",
            "/phpunit.xml",
            "/phpstan.neon",
            "/.editorconfig"
        ]
    },
    "support": {
        "issues": "https://github.com/express-php/microframework/issues",
        "source": "https://github.com/express-php/microframework",
        "docs": "https://github.com/express-php/microframework/blob/main/README.md"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/express-php"
        }
    ]
}
